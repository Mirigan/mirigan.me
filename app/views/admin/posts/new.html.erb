<section class="container mx-auto py-3 px-3 max-w-3xl">
  <div class="mb-3">
    <h1 class="text-2xl text-gray-500 font-normal">New Post</h1>
  </div>

  <%= form_with model: [:admin, @post] do |form| %>
    <div class="my-5">
      <%= form.label :title %>
      <%= form.text_field :title, required: true, autofocus: true, placeholder: "Enter post title", class: "block shadow-sm rounded-md border border-violet-400 focus:outline-violet-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :body %>
      <%= form.textarea :body, required: true, placeholder: "Enter post body", class: "block shadow-sm rounded-md border border-violet-400 focus:outline-violet-600 px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
      <div class="inline">
        <%= form.submit class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-violet-600 hover:bg-violet-500 text-white inline-block font-medium cursor-pointer" %>
      </div>

      <div class="mt-4 text-sm text-gray-500 sm:mt-0">
        <%= link_to "Cancel", admin_root_path, class: "text-violet-700 underline hover:no-underline" %>
      </div>
    </div>
  <% end %>

</section>
