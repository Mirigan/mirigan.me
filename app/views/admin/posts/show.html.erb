<section class="container mx-auto py-3 px-3 max-w-3xl">
  <div class="mb-3">
    <%= link_to "Edit", [:edit, :admin, @post], class: "border-2 rounded-xl border-violet-600 bg-violet-600 items-center p-2 text-sm text-white" %>
    <%= link_to "Destroy", [:admin, @post], class: "border-2 rounded-xl border-violet-600 items-center p-2 text-sm text-violet-600", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>

  <div class="mb-3">
    <h1 class="text-2xl text-gray-500 font-normal"><%= @post.title %></h1>
  </div>

  <div class="prose text-justify">
    <%= @post.body %>
  </div>
</section>
